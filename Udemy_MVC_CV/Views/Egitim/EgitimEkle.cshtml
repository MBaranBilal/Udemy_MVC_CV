@model Udemy_MVC_CV.Models.Entity.TblEgitim
@{
    ViewBag.Title = "EgitimEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2 style="color:darkorange"><b>Yeni Eğitim Ekleme Sayfası</b></h2>
<br />
<div class="resume-section-content">
    <form method="post">
        @Html.Label("Başlık")
        @Html.TextBoxFor(x => x.Baslik, new { @class = "form-control", @placeholder = "Başlık giriniz." })
        @Html.ValidationMessageFor(x => x.Baslik, "", new { @class = "badge bg-danger" })
        <br />
        @Html.Label("Alt Başlık 1")
        @Html.TextBoxFor(x => x.AltBaslik1, new { @class = "form-control", @placeholder = "Alt Başlık 1'i giriniz." })
        <br />
        @Html.Label("Alt Başlık 2")
        @Html.TextBoxFor(x => x.AltBaslik2, new { @class = "form-control", @placeholder = "Alt Başlık 2'yi giriniz." })
        <br />
        @Html.Label("GNO")
        @Html.TextBoxFor(x => x.GNO, new { @class = "form-control", @placeholder = "GNO giriniz." })
        @Html.ValidationMessageFor(x => x.GNO, "", new { @class = "badge bg-danger" })
        <br />
        @Html.Label("Tarih")
        @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control", @placeholder = "Tarih giriniz." })
        <br />

        <button class="btn btn-warning">Kaydet</button>
    </form>
</div>

